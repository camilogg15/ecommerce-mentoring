root = true

# ============================================================
# GLOBAL .NET Code Style
# ============================================================

[*.cs]

############################
# Using directives
############################

# Ordenar usings: System primero
dotnet_sort_system_directives_first = true

# Agrupar usings
dotnet_separate_import_directive_groups = true

############################
# Code Style Preferences
############################

# Preferir var
csharp_style_var_for_built_in_types = true:suggestion
csharp_style_var_when_type_is_apparent = true:suggestion
csharp_style_var_elsewhere = true:suggestion

# Preferir expresiones simplificadas
csharp_style_prefer_simplified_boolean_expressions = true:warning
csharp_style_prefer_simplified_interpolation = true:warning

# Preferir usar interpolated strings
csharp_style_prefer_interpolated_strings = true:warning

############################
# Naming Rules
############################

# Private fields: _camelCase
dotnet_naming_rule.private_fields_should_be_camel_case.severity = warning
dotnet_naming_rule.private_fields_should_be_camel_case.symbols = private_fields
dotnet_naming_rule.private_fields_should_be_camel_case.style = camel_case_underscore

dotnet_naming_symbols.private_fields.applicable_accessibilities = private
dotnet_naming_symbols.private_fields.applicable_kinds = field

dotnet_naming_style.camel_case_underscore.capitalization = camel_case
dotnet_naming_style.camel_case_underscore.required_prefix = _

############################
# Additional rules requested
############################

# (1) Require explicit accessibility
dotnet_style_require_accessibility_modifiers = for_types:warning

# (2) Prefer expression-bodied members
csharp_style_expression_bodied_methods = true:suggestion
csharp_style_expression_bodied_properties = true:suggestion

# (3) Prefer using statement instead of using block
csharp_prefer_simple_using_statement = true:warning

############################
# Formatting
############################

# Consistent formatting
indent_style = space
indent_size = 4
insert_final_newline = true
charset = utf-8-bom
